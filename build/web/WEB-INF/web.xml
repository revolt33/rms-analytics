<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>220757</param-value>
    </context-param>
    <servlet>
        <servlet-name>employee-login</servlet-name>
        <servlet-class>login.Employee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>application.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>employee-manager-action</servlet-name>
        <servlet-class>employee.manager.Action</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>form-upload</servlet-name>
        <servlet-class>fileUpload.Action</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Action</servlet-name>
        <servlet-class>employee.sales.Action</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employee-login</servlet-name>
        <url-pattern>/employee.login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>employee-redirect</servlet-name>
        <servlet-class>employee.Redirect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>employee-stock-action</servlet-name>
        <servlet-class>employee.stock.Action</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employee-stock-action</servlet-name>
        <url-pattern>/employee/stock/Action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>employee-redirect</servlet-name>
        <url-pattern>/employee/</url-pattern>
    </servlet-mapping>
				<filter>
        <filter-name>login-employee-filter</filter-name>
        <filter-class>filter.employee.Login</filter-class>
    </filter>
				<filter-mapping>
        <filter-name>login-employee-filter</filter-name>
        <url-pattern>/employee/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>redirect-stock-filter</filter-name>
        <filter-class>filter.employee.stock.Observer</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>redirect-stock-filter</filter-name>
        <url-pattern>/employee/stock/*</url-pattern>
    </filter-mapping>
				<filter>
								<filter-name>redirect-sales-filter</filter-name>
								<filter-class>filter.employee.sales.Observer</filter-class>
				</filter>
				<filter-mapping>
								<filter-name>redirect-sales-filter</filter-name>
								<url-pattern>/employee/sales/*</url-pattern>
				</filter-mapping>
				<filter>
        <filter-name>redirect-manager-filter</filter-name>
        <filter-class>filter.employee.manager.Observer</filter-class>
    </filter>
				<filter-mapping>
        <filter-name>redirect-manager-filter</filter-name>
        <url-pattern>/employee/manager/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>application.Initializer</listener-class>
    </listener>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>employee-manager-action</servlet-name>
        <url-pattern>/employee/manager/Action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>form-upload</servlet-name>
        <url-pattern>/formUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Action</servlet-name>
        <url-pattern>/employee/sales/Action</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>125</session-timeout>
    </session-config>
    <session-timeout/>
</web-app>
